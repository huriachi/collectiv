{% extends 'base.twig' %}

{% block content %}
    <h2 class="mb-4 d-inline-block">Manage Users</h2>
    {% if users|length > 0 %}
        <a class="btn btn-primary mt-1 float-right" href="/users/create">Create User</a>
        <div class="card table-responsive">
            <table class="table table-striped table-borderless m-0">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td class="align-middle">{{ user.id }}</td>
                            <td class="align-middle">{{ user.firstname }}</td>
                            <td class="align-middle">{{ user.surname }}</td>
                            <td class="align-middle">{{ user.email }}</td>
                            <td class="text-center align-middle">
                                <a href="/users/{{ user.id }}/edit" class="btn table-btn btn-sm btn-success">Edit</a>
                                <button type="button" class="btn table-btn btn-sm btn-danger" onclick="user.delete({{ user.id }})">Delete</button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body">
                <h3>No Users</h3>
                <span>There are no users in the database. Why not <a href="/users/create">create</a> one?</span>
            </div>
        </div>
    {% endif %}
{% endblock %}