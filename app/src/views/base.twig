<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="/js/app.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/app.css">
    <title>Collectiv</title>
</head>
<body>
    <nav class="navbar navbar-light bg-light navbar-expand-lg fixed-top border-bottom">
        <a href="/" class="navbar-brand"><img src="/svg/logo.svg" alt="collectiv" height="30"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="/" class="nav-link">Home</a>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" role="button" data-toggle="dropdown">Users</a>
                    <div class="dropdown-menu">
                        <a href="/users" class="dropdown-item">Manage</a>
                        <a href="/users/create" class="dropdown-item">Create</a>
                    </div>
                </li>
            </ul>
            <button type="button" class="btn btn-outline-danger" onclick="user.resetDatabase()">Reset Database</button>
        </div>
    </nav>

    <div class="container">
        {% block content %}{%  endblock %}
    </div>

    <div id="notificationArea">
        <div id="notification" class="alert invisible">
        </div>
    </div>

    <div class="modal" id="mainModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle"></h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body"><p></p></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="mainModalConfirm" class="btn btn-primary" data-dismiss="modal">Continue</button>
                </div>
            </div>
        </div>
    </div>

    <nav class="navbar fixed-bottom bg-dark border-top">
        <div class="navbar-text mx-auto text-secondary font-weight-bold">
            collectiv â€¢ {{ 'now'|date('Y') }}
        </div>
    </nav>
</body>
</html>